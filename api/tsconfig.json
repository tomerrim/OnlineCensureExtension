{
  "compilerOptions": {
    "lib": ["ES2015", "ES5", "ES6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  }
}
